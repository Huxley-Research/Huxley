# Example environment configuration
# Copy to .env and fill in values

# Environment
HUXLEY_ENV=development
HUXLEY_DEBUG=true

# LLM Providers
HUXLEY_DEFAULT_PROVIDER=openai
HUXLEY_DEFAULT_MODEL=gpt-4
OPENAI_API_KEY=sk-your-key-here
# ANTHROPIC_API_KEY=your-key-here

# Server
HUXLEY_SERVER__HOST=0.0.0.0
HUXLEY_SERVER__PORT=8000
HUXLEY_SERVER__WORKERS=1

# Logging
HUXLEY_LOG__LEVEL=INFO
HUXLEY_LOG__FORMAT=console

# Database (optional)
# HUXLEY_DB__DRIVER=postgresql
# HUXLEY_DB__HOST=localhost
# HUXLEY_DB__PORT=5432
# HUXLEY_DB__DATABASE=huxley
# HUXLEY_DB__USERNAME=huxley
# HUXLEY_DB__PASSWORD=secret

# Redis (optional, for distributed deployments)
# HUXLEY_REDIS__HOST=localhost
# HUXLEY_REDIS__PORT=6379

# Compute
HUXLEY_COMPUTE__BACKEND=local
HUXLEY_COMPUTE__MAX_WORKERS=4
